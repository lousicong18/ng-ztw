{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    //"noImplicitAny": true,
    "module": "es2015",
    "lib":["es2015","dom"],
    "target": "es5",
    "declaration":true,
    "baseUrl":"./node_modules",

    "paths":{
      "ng-ztw":["../ngzModule"],
      "*":["../ngzModule/*"]
    },

    "moduleResolution":"node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError":true

  },
  "include": [
    "demo/**/*.ts",
    "ngzModule/**/*.ts"
  ],
  "angularCompilerOptions":{
    "strictMetadataEmit":true
  },
  "compileOnSave": false
}
